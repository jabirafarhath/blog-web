<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/header') %>
  <body class="bg-red-300">
    <div class="flex justify-between">
      <div class="bg-gray-800 w-1/4 h-screen fixed">
        <!-- Navigation links go here -->
        <%- include('../partials/navbar') %>
      </div>
      <div class="p-6 w-3/4" style="position: relative; left: 25%">
        <!-- Main content goes here -->

        <div class="container mx-auto mt-8">
          <!-- Profile information -->
          <div class="flex items-center">
            <img
              src="<%= stories[0].user.image %>"
              alt="Profile Picture"
              class="w-24 h-24 rounded-full mr-4"
            />
            <div>
              <h1 class="text-3xl font-bold text-primary">
                <%= stories[0].user.displayName %>
              </h1>
              <p class="text-secondary font-semibold">
                @<%= stories[0].user.firstName %>
              </p>
              <p class="text-secondary text-sm font-semibold">
                <%= stories.length %> Threads
              </p>
            </div>
          </div>
          <!-- Stories -->
          <div class="mt-8">
            <h2 class="text-2xl font-bold mb-4 text-secondary">Stories</h2>
            <% stories.forEach(story => { %>
             <%- include("story_card",{story:story}) %>
            <% }) %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
